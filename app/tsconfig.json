{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "noErrorTruncation": false,
    "baseUrl": ".",
    "paths": {
      "@/env/*": ["src/env/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/layout/*": ["src/layout/*"],
      "@/utils/*": ["src/utils/*"],
      "@/validators/*": ["src/validators/*"],
      "@/libs/*": ["src/libs/*"],
      "@/drizzle/*": ["drizzle/*"],
      "@/server/*": ["src/server/*"],
      "@/api/*": ["src/server/api/*"],
      "@/app/*": ["src/app/*"],
      "@/routers/*": ["src/server/api/routers/*"],
      "@/components/*": ["src/components/*"],
      "@/contentbox/*": ["src/components/contentboxes/*"],
      "@/public/*": ["public/*"],
    },
    "plugins": [
      {
        "name": "next",
      },
    ],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    "src/libs/drawThreeJson.js",
    "src/libs/travel/SpriteMixer.js",
    "public/service-worker.js",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules", ".next"],
}
